        <script>
            function getFormData(formId) {
                var formData = $("#" + formId + " :input")
                    .filter(function (index, element) {
                        return $(element).val() != '' && element.name != 'csrf_token';
                    })
                    .serialize();
                $("#" + formId).trigger("reset");
                return formData
            }

