{% extends 'base.html.jinja2' %}

{% from 'macros.html.jinja2' import operation_colour %}

{% block main %}
    <div class="container d-flex justify-content-center">
        <div class="col-sm-10">
            <div class="card my-4">
                <div class="card-header">
                    <div class="card-title">
                        <h5 class="text-center">{{ operation.name | title }} {{ operation.model.name }}</h5>
                    </div>
                </div>
                <div class="card-body">
                    <form method="post">
{#                        {% with form = operation.model.make_form(request.args) %}#}
                            <div class="form-group">
                                {{ form.csrf_token }}
                            </div>
                            {% for field in form %}
                                {% if field.label.text not in form.hidden_fields %}
                                    <div class="form-group">
                                        {{ field.label }}{% if field.__required__ %}<span class="text-danger">*</span>{% endif %}:
                                        {{ field(class="form-control mb-4", disabled="") }}
                                    </div>
                                {% endif %}
                            {% endfor %}
                            <div class="form-group text-center">
                                {% with classes = "btn btn-" + operation_colour(operation.name) %}
                                    {{ form.submit(class=classes) }}
                                {% endwith %}
                            </div>
{#                        {% endwith %}#}
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
