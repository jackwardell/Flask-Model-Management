{% from 'components/macros.html.jinja2' import operation_colour %}
{% from 'components/macros.html.jinja2' import get_operation_header %}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="Jack Wardell">
    <title>Model Management</title>

    {# jquery #}
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>

    {# bootstrap #}
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">

    {# datatables #}
    <script src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.22/js/dataTables.bootstrap4.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.22/css/dataTables.bootstrap4.min.css">

    {# feather #}
    <script src="https://unpkg.com/feather-icons"></script>

    {% include 'style.html.jinja2' %}
</head>
<body>

<nav class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow">
    <a class="navbar-brand col-md-3 col-lg-2 mr-0 px-3" href="{{ get_url(endpoints.index_view) }}">Flask Model Management</a>
    <button class="navbar-toggler position-absolute d-md-none collapsed" type="button" data-toggle="collapse" data-target="#sidebar-menu" aria-controls="sidebar-menu" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
</nav>

<div class="container-fluid">
    <div class="row">
        <nav id="sidebar-menu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
            <div class="sidebar-sticky pt-3">
                <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mb-2 mt-3 text-muted">
                    <span>Models Under Management</span>
                </h6>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link {% if request.endpoint == (request.blueprint + "." + endpoints.index_view) %}active{% endif %}" href="{{ get_url(endpoints.index_view) }}"><span data-feather="home"></span>home</a>
                    </li>
                    {% for model_name, model in model_manager.models.items() %}
                        <li class="nav-item">
                            <a class="nav-link {% if request.view_args['tablename'] == model_name %}active{% endif %}" href="{{ get_url(endpoints.table_view, tablename=model_name) }}"><span data-feather="database"></span>{{ model_name }}</a>
                        </li>
                        {% if request.view_args['tablename'] == model_name %}
                            <li>
                                <ul class="nav flex-column">
                                    {% for operation in model.operations %}
                                        <li class="nav-item ml-3"><a class="nav-link {% if operation in request.view_args.values() %}active{% endif %}" href="{{ get_url(endpoints.table_operation_view, tablename=model.name, operation=operation) }}">{{ get_operation_header(operation) }}</a></li>
                                    {% endfor %}
                                </ul>
                            </li>
                        {% endif %}
                    {% endfor %}
                </ul>
            </div>
        </nav>

        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-1 mb-3 border-bottom">
                {% block title %}
                    {% if "tablename" in request.view_args %}
                        <h1>{{ request.view_args['tablename'] }}</h1>
                    {% else %}
                        <h1>home</h1>
                    {% endif %}
                {% endblock %}
            </div>
            <div class="mb-3 border-bottom">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        {% if request.endpoint == request.blueprint + "." +  endpoints.index_view %}
                            <li class="breadcrumb-item">models under management</li>
                        {% elif request.endpoint == request.blueprint + "." + endpoints.table_view %}
                            <li class="breadcrumb-item active"><a href="{{ get_url(endpoints.index_view) }}">models under management</a></li>
                            <li class="breadcrumb-item">{{ model.name }}</li>
                        {% else %}
                            <li class="breadcrumb-item active"><a href="{{ get_url(endpoints.index_view) }}">models under management</a></li>
                            <li class="breadcrumb-item active"><a href="{{ get_url(endpoints.table_view, tablename=model.name) }}">{{ model.name }}</a></li>
                            <li class="breadcrumb-item">{{ request.view_args['operation'] }}</li>
                        {% endif %}
                    </ol>
                </nav>
            </div>
            {% block main %}
            {% endblock %}
        </main>
    </div>
</div>

{% block scripts %}
{% endblock %}

<script>
    feather.replace()
</script>

</body>
</html>
