{% from 'components/macros.html.jinja2' import operation_colour %}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="Jack Wardell">
    <title>Model Management</title>

    {# jquery #}
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>

    {# bootstrap #}
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">

    {# datatables #}
    <script src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.22/js/dataTables.bootstrap4.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.22/css/dataTables.bootstrap4.min.css">

    {# feather #}
    <script src="https://unpkg.com/feather-icons"></script>

    {% include 'style.html.jinja2' %}
</head>
<body>

<nav class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow">
    <a class="navbar-brand col-md-3 col-lg-2 mr-0 px-3" href="{{ get_url('index') }}">Flask Model Management</a>
    <button class="navbar-toggler position-absolute d-md-none collapsed" type="button" data-toggle="collapse" data-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
</nav>

<div class="container-fluid">
    <div class="row">
        <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
            <div class="sidebar-sticky pt-3">
                <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mb-2 mt-3 text-muted">
                    <span>Models Under Management</span>
                </h6>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link {% if is_url('index') %}active{% endif %}" href="{{ get_url('index') }}">
                            <span data-feather="home"></span>Dashboard
                        </a>
                    </li>
                    {% for model in models %}
                        <li class="nav-item">
                            <a class="nav-link {% if is_model(model) %}active{% endif %}" href="{{ get_url(model.name) }}">
                                <span data-feather="database"></span>
                                {{ model.name | title }}
                            </a>
                        </li>
                        {% if operation and is_model(model) %}
                            <li>
                                <ul>
                                    {% for operation in model.operations %}
                                        <li><a class="nav-link {% if is_model_operation(operation) %}active{% endif %}" href="{{ get_url(operation.endpoint) }}">{{ operation | title }}</a></li>
                                    {% endfor %}
                                </ul>
                            </li>
                        {% endif %}
                    {% endfor %}
                </ul>
            </div>
        </nav>

        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">

                {% block title %}
                    {% if operation %}
                        <h1>{{ operation.name | title }} {{ operation.model.name }}</h1>
                    {% else %}
                        {#                        {% if operation.model %}#}
                        {#                            <h1>{{ operation.model.name }} Dashboard</h1>#}
                        {#                        {% else %}#}
                        <h1>Dashboard</h1>
                        {#                        {% endif %}#}
                    {% endif %}
                {% endblock %}

                {#                <div class="btn-toolbar mb-2 mb-md-0">#}
                {#                    <div class="btn-group mr-2">#}
                {#                        <button type="button" class="btn btn-sm btn-outline-secondary">Share</button>#}
                {#                        <button type="button" class="btn btn-sm btn-outline-secondary">Export</button>#}
                {#                    </div>#}
                {#                    <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle">#}
                {#                        <span data-feather="calendar"></span> This week#}
                {#                    </button>#}
                {#                </div>#}

            </div>
            <div class="mb-3 border-bottom">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        {% if is_url('index') %}
                            <li class="breadcrumb-item active">models under management</li>
                        {% else %}
                            <li class="breadcrumb-item"><a href="{{ get_url('index') }}">models under management</a></li>
                            <li class="breadcrumb-item {% if not operation %}active{% endif %}">{% if operation %}<a href="{{ get_url(operation.model.endpoint) }}">{% endif %}{{ operation.model.name }}{% if operation %}</a>{% endif %}</li>
                            {% if operation %}
                                <li class="breadcrumb-item active">{{ operation }}</li>
                            {% endif %}
                        {% endif %}
                    </ol>
                </nav>
            </div>
            {#            {% if operation.model %}#}
            {#                <div class="d-flex justify-content-between pb-3 mb-3 border-bottom">#}
            {#                    {% for operation in operation.model.operations %}#}
            {#                        <a href="{{ get_url(operation.model.endpoint, operation="/" + operation.name) }}" class="btn btn-{{ operation_colour(operation.name) }}" role="button" style="width: 100px">{{ operation.name | title }}</a>#}
            {#                    {% endfor %}#}
            {#                </div>#}
            {#            {% endif %}#}
            {% block main %}
            {% endblock %}
        </main>
    </div>
</div>
{% block scripts %}
{% endblock %}

<script>
    feather.replace()
</script>

</body>
</html>
